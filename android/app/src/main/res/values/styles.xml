<resources>
    <!-- Splash screen theme used ONLY at startup -->
    <style name="BootTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/bootsplash_logo</item>

        <!-- Status bar -->
        <item name="android:statusBarColor">#2D67C3</item>
        <item name="android:windowLightStatusBar">false</item>

        <!-- Navigation bar -->
        <item name="android:navigationBarColor">#FFFFFF</item>
        <item name="android:windowLightNavigationBar">true</item>

        <!-- Others -->
        <item name="android:windowNoTitle">true</item>
        <!-- <item name="android:windowFullscreen">true</item> -->
    </style>
    <!-- App main theme -->
    <style name="AppTheme" parent="Theme.AppCompat.DayNight.NoActionBar" >
        <item name="android:navigationBarColor">#FFFFFF</item>
        <item name="android:windowLightNavigationBar">true</item>
    </style>
</resources>

